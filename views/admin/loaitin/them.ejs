<div class="modal fade" id="themModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Modal title</h4>
            </div>
            <form action="/admin/loaitin/them" method="post" accept-charset="utf-8">
                <div class="modal-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>
                                    <label for="">Tên Loại tin:</label>
                                </td>
                                <td>
                                    <input type="text" class="form-control" name="themten" value="" placeholder="Nhập tên thể loại">
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <label for="controlSelect">Lựa chọn thể loại:</label>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <select name="theloai" class="form-control" id="controlSelect">
                                            <option value="">---Chọn thể loại---</option>
                                            <% theloai.forEach(function (tl){ %>
                                                <option value="<%=tl.idtheloai%>"><%=tl.tentheloai%></option>
                                            <% }) %>
                                        </select>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-default">Làm mới</button>
                    <button type="submit" class="btn btn-primary">Thêm</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>