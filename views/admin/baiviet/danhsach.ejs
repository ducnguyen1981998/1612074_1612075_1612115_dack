<%include ../partials/header%>
</head>

<body>
    <div id="wrapper">
    <%include ../partials/menu%>
        <div id="page-wrapper">
            <div class="row">
            <div class="col-md-12" align="center">
                <h1 class="page-header"> Quản lý Bài viết</h1>
            </div>
            </div>
            <% if (error.length > 0) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
            <% } else if(success.length > 0){ %>
            <div class="alert alert-success">
                <%= success %>
            </div>
            <% } %>
            <div class="row">
                <div class="col-md-12">
                    <a href="/admin/baiviet/them" title="Thêm tin tức mới"><button type="button" class="btn-success btn" ><i class="fa fa-plus" ></i></button></a>
                </div>
            </div>
            <br>
            <br>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Danh Sách
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Tiêu đề</th>
                                        <th>Loại tin</th>
                                        <th>Trạng thái</th>
                                        <th>Xem trước</th>
                                        <th>Sửa</th>
                                        <th>Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% baiviet.forEach(function (i){ %>
                                        <tr class="gradeC">
                                            <td>
                                                <%=i.idbv%>
                                            </td>
                                            <td>
                                                <div class="title">
                                                    <a class="tieude" href="#" data-toggle="tooltip" data-placement="top" title="<%=i.tieude%>">
                                                        <%=i.tieude%>
                                                    </a>
                                                </div>
                                            </td>
                                            <td>
                                                <%=i.tencd%>
                                            </td>
                                            <td>
                                                <%=i.trangthai%>
                                            </td>

                                            <td>
                                                <div>
                                                    <a href="/chi-tiet/<%= i.idcdd%>/<%= i.idbv%>" ><button type="button" class="btn-info btn" ><i class="fa fa-eye" ></i></button></a>
                                                </div>
                                            </td>
                                            <td>
                                                <a href="/admin/baiviet/sua/<%=i.idbv%>"><button type="button" class="btn-info btn" ><i class="fa fa-edit" ></i></button></a>
                                            </td>
                                            <td class="center">
                                                <%include xoa%>
                                                <button class="btn-danger btn" data-toggle="modal" data-target="#xoaModal<%=i.idbaiviet%>"><i class="fa fa-trash-o" ></i></button>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
        </div>
    </div>
    <%include ../partials/footer%>
    <!-- DataTables JavaScript -->
    <script src="/admin/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/admin/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/admin/vendor/datatables-responsive/dataTables.responsive.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="/admin/dist/js/sb-admin-2.js"></script>
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
    $(document).ready(function() {
        $('[data-toggle="tooltip"]').tooltip();
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
    </script>
</body>
